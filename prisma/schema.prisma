datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())

  email     String @unique
  firstName String
  lastName  String

  documents Document[] @relation("owner")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Behavior {
  id          String  @id
  title       String
  description String?
  schema      Json
  types       Type[]
}

model Type {
  id               String  @id
  title            String
  description      String?
  schema           Json
  behaviors_schema Json    @default("{}") @map("_schema")

  behaviors Behavior[]
  documents Document[] @relation("type")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  uuid       String  @id @default(uuid())
  parentUuid String?
  id         String
  path       String  @unique

  parent   Document?  @relation("children", fields: [parentUuid], references: [uuid])
  children Document[] @relation("children")

  typeId String
  type   Type   @relation("type", fields: [typeId], references: [id])

  ownerId Int
  owner   User @relation("owner", fields: [ownerId], references: [id])

  position_in_parent Int
  exclude_from_nav   Boolean @default(false)
  json               Json    @default("{}")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
